{
  "name": "simple-page-stub",
  "version": "0.0.2",
  "author": "Anton Konev / @evilj0e / info@antonkonev.com",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://evilj0e@bitbucket.org/evilj0e/simple-page-stub.git"
  },
  "scripts": {
    "development": "node_modules/.bin/gulp serve",
    "build": "node_modules/.bin/gulp",
    "clean": "rm -rf build",
    "hint": "node_modules/.bin/jshint .",
    "cs": "node_modules/.bin/jscs .",
    "codestyle": "npm run hint & npm run cs",
    "validate": "npm ls",
    "test": "npm run build && npm run codestyle && (cd build && ../node_modules/.bin/mocha ../test && cd ..) && npm run clean",
    "lint": "jshint .",
    "start": "npm i && npm run build && node index.js"
  },
  "dependencies": {
    "gulp": "3.9.1",
    "gulp-plumber": "1.1.0",
    "gulp-static-handlebars": "1.2.0",
    "gulp-less": "3.0.5",
    "gulp-concat": "2.6.0",
    "gulp-autoprefixer": "3.1.0",
    "gulp-postcss": "6.1.0",
    "gulp-rename": "1.2.2",
    "gulp-htmlmin": "1.3.0",
    "gulp-cssnano": "2.1.1",
    "postcss-autoreset": "1.1.5",
    "postcss-merge-rules": "2.0.6",
    "postcss-size": "1.0.0",
    "gulp-imagemin": "2.4.0",
    "imagemin-pngquant": "4.2.2",
    "express": "4.13.4"
  },
  "devDependencies": {
      "browser-sync": "2.11.2",
      "precommit-hook": "3.0.0",
      "mocha": "2.4.5",
      "should": "8.3.0",
      "jscs": "2.11.0",
      "jshint": "2.9.1",
      "stylelint": "5.1.0",
      "stylelint-config-standard": "4.0.1"
  },
  "pre-commit": [
    "validate",
    "test"
  ]
}
